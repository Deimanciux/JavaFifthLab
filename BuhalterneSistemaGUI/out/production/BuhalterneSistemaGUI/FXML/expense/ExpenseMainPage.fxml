<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXcontrollers.expense.ExpenseMainPageController">
    <children>
        <AnchorPane prefHeight="447.0" prefWidth="613.0">
            <children>
                <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="613.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="Expense Managing">
                            <items>
                                <MenuItem fx:id="create" mnemonicParsing="false" onAction="#createExpense" text="Create" />
                                <MenuItem fx:id="update" mnemonicParsing="false" onAction="#updateExpense" text="Update" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Previous Page">
                            <items>
                                <MenuItem fx:id="goToMenu" mnemonicParsing="false" onAction="#returnToMainMenuPage" text="Main menu" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <AnchorPane layoutY="27.0" prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <ListView fx:id="expenseList" prefHeight="418.0" prefWidth="241.0" />
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="240.0" layoutY="27.0" prefHeight="111.0" prefWidth="363.0">
                    <children>
                        <Button fx:id="viewDetails" layoutX="60.0" layoutY="17.0" mnemonicParsing="false" onAction="#viewExpenseDetails" prefHeight="25.0" prefWidth="213.0" text="View  Expense Details" />
                        <Button fx:id="delete" layoutX="60.0" layoutY="56.0" mnemonicParsing="false" onAction="#deleteExpense" prefHeight="25.0" prefWidth="213.0" text="Delete" />
                    </children>
                </AnchorPane>
                <AnchorPane layoutX="240.0" layoutY="131.0" prefHeight="269.0" prefWidth="363.0">
                    <children>
                        <ListView fx:id="showData" layoutY="7.0" prefHeight="306.0" prefWidth="373.0" />
                    </children>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
